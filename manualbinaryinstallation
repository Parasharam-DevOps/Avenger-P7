# Install OpenJDK 11
sudo apt update
sudo apt install openjdk-11-jre

# Enable universe repository and install Python 2.7
sudo apt-add-repository universe
sudo apt update
sudo apt install python2-minimal

# Download and Install Cassandra 4.1.3
wget https://downloads.apache.org/cassandra/4.1.3/apache-cassandra-4.1.3-bin.tar.gz
tar -zxvf apache-cassandra-4.1.3-bin.tar.gz

# Start Cassandra in the foreground
cd apache-cassandra-4.1.3
bin/cassandra -f

# Connect to the Cassandra shell
bin/cqlsh

bin/cassandra

/home/ubuntu/apache-cassandra-4.1.3/bin/nodetool status

export PATH="/home/ubuntu/apache-cassandra-4.1.
export PATH=$PATH:/home/ubuntu/apache-cassandra-4.1.3/bin
export JAVA_HOME=/usr/bin/java
export PATH=$PATH:$JAVA_HOME/bin

source ~/.bashrc
sudo nano /home/ubuntu/apache-cassandra-4.1.3/conf/cassandra.yaml
listen_address: private_ip_address
rpc_address: private_ip_address
