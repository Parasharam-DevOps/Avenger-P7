# Install OpenJDK 11
sudo apt update
sudo apt install openjdk-11-jre

# Enable universe repository and install Python 2.7
sudo apt-add-repository universe
sudo apt update
sudo apt install python2-minimal

# Download and Install Cassandra 4.1.3
wget https://downloads.apache.org/cassandra/4.1.3/apache-cassandra-4.1.3-bin.tar.gz
tar -zxvf apache-cassandra-4.1.3-bin.tar.gz

# Start Cassandra in the foreground
cd apache-cassandra-4.1.3
bin/cassandra -f

# Connect to the Cassandra shell
bin/cqlsh

# CQL Commands
# List all keyspaces
SELECT * FROM system_schema.keyspaces;

# Create a new keyspace named "mobapp" with a replication factor of 3
CREATE KEYSPACE mobapp WITH replication = {'class': 'SimpleStrategy', 'replication_factor': 3};

# Describe the "mobapp" keyspace
DESCRIBE KEYSPACE mobapp;

# Use the "mobapp" keyspace
USE mobapp;

# Create a new table named "appinfo" with columns sno, appName, userName, and gender, where "sno" is the primary key
CREATE TABLE appinfo (sno int, appName varchar, userName varchar, gender varchar, PRIMARY KEY (sno));

# Describe the "appinfo" table
DESCRIBE TABLE appinfo;
